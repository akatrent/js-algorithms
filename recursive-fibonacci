<!DOCTYPE html>
<html>
<body>

<p id="fib"></p>

<script>

const fib = (num) =>{
	if(num < 2){
    	return num;
    }
    return fib(num - 1) + fib(num - 2);
}

// display all fibonacci numbers in the dom 
for(let i = 1; i <= 10; i++){
  document.getElementById('fib').textContent += fib(i) + " ";
}
</script>

</body>
</html>
